<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ghost"
    tools:context=".ItemDetailsActivity">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/detailed_plant_card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="10dp"
        android:clipToPadding="false"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/detailed_plant_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/detailed_plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailed_plant_card"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/detailed_plant_species"
        android:text="No Name"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailed_plant_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailed_plant_card"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="Species"
        android:textColor="@color/teal"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/journal_button"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_journal"
            android:text="Add Journal"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/detailed_plant_description"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_below="@+id/detailed_plant_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:text="Lorem ipsum dolor sit amet. Quo quibusdam tenetur ut ipsum internos et culpa commodi qui sint eaque. Et esse amet aut nihil animi rem voluptatem dolore non dolor dignissimos et laudantium molestiae qui quas reiciendis. Aut delectus ullam eum quia sint ut porro eveniet id optio pariatur ut architecto nihil sed blanditiis odio. Et necessitatibus sunt eum aspernatur perspiciatis ab incidunt saepe eum aliquid quia qui commodi nihil sit rerum doloremque et nostrum doloremque." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/journal_RV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/journal_button"
        android:layout_below="@id/detailed_plant_description"/>
</RelativeLayout>