<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="150dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/plant_item_bg"
    android:clickable="true"
    android:elevation="5dp"
    android:focusable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/journal_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="June 23"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/journal_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/journal_date"
            android:layout_marginStart="8dp"
            android:text="Blah Blah BLah this is my plant he does stuff" />
    </RelativeLayout>

</RelativeLayout>