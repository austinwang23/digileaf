<!-- item_achievement.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/achievement_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/achievement_badge_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_achievement" />

            <TextView
                android:id="@+id/achievement_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/achievement_badge_image"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Achievement Title" />

            <TextView
                android:id="@+id/achievement_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/achievement_title_text"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/achievement_badge_image"
                android:textSize="16sp"
                android:textColor="@color/black_soft"
                android:text="Achievement Description" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>