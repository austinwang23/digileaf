<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vendor_item_container"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:elevation="20dp"
    android:backgroundTint="@color/light_gray"
    tools:context=".VendorDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/vendor_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_vendor_icon"
            app:tint="@color/teal"/>

        <TextView
            android:id="@+id/vendor_name"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vendor_icon"
            android:layout_centerHorizontal="true"
            android:text="Vendor"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/vendor_address"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vendor_name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="The address goes here"
            android:textAlignment="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navigation_button"
            android:backgroundTint="@color/teal"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/vendor_address"
            android:text="Show navigation" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>